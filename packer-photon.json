{
  "variables": {
    "iso_file": "",
    "iso_sha1sum": "",
    "product_version": "",
    "root_password": "2RQrZ83i79N6szpvZNX6"
  },
  "builders": [
    {
      "name": "vmware_desktop",
      "vm_name": "photon",
      "vmdk_name": "photon-disk1",
      "type": "vmware-iso",
      "headless": false,
      "disk_size": 20480,
      "disk_type_id": 0,
      "guest_os_type": "vmware-photon-64",
      "iso_url": "{{user `iso_file`}}",
      "iso_checksum": "sha1:{{user `iso_sha1sum`}}",
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "60m",
      "boot_wait": "5s",
      "shutdown_command": "shutdown -h now",
      "http_directory": "scripts",
      "version": 11,
      "vmx_data": {
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualDev": "vmxnet3"
      },
      "vmx_data_post": {
        "displayname": "VMware Photon",
        "usb.present": "false"
      },
      "boot_command": [
        "<tab><wait> ",
        "insecure_installation=1 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-photon_2.0.json",
        "<enter>"
      ]
    },
    {
      "name": "virtualbox",
      "vm_name": "photon",
      "type": "virtualbox-iso",
      "headless": false,
      "hard_drive_interface": "scsi",
      "disk_size": 20480,
      "guest_os_type": "Linux_64",
      "iso_url": "{{user `iso_file`}}",
      "iso_checksum": "sha1:{{user `iso_sha1sum`}}",
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "60m",
      "boot_wait": "5s",
      "http_directory": "scripts",
      "shutdown_command": "shutdown -h now",
      "boot_command": [
        "<tab><wait> ",
        "insecure_installation=1 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-photon_2.0.json",
        "<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/photon-update_packages.sh"
    },
    {
      "type": "shell",
      "only": [ "vmware_desktop", "virtualbox" ],
      "script": "scripts/photon-user_provisioning.sh"
    },
    {
      "type": "shell",
      "only": [ "vmware_desktop" ],
      "script": "scripts/photon-vmware_prep.sh"
    },
    {
      "type": "shell",
      "only": [ "virtualbox" ],
      "script": "scripts/photon-virtualbox_prep.sh"
    },
    {
      "type": "file",
      "only": [ "virtualbox" ],
      "source": "scripts/photon-virtualbox_load_module.conf",
      "destination": "/etc/modules-load.d/virtualbox.conf"
    },
    {
      "type": "shell",
      "inline": [
        "sed -i '/linux/ s/$/ net.ifnames=0/' /boot/grub2/grub.cfg"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'GRUB_CMDLINE_LINUX=\"net.ifnames=0\"' >> /etc/default/grub"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/photon-security_lockdown.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sed -i 's/OS/Linux/' /etc/photon-release"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [ "vmware_desktop", "virtualbox" ],
      "compression_level": 9,
      "vagrantfile_template": "scripts/vagrantfile.tpl",
      "output": "photon-{{user `product_version`}}-{{.BuildName}}.box"
    }
  ]
}
